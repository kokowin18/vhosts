<?xml version="1.0"?>
  <config>
     <modules>
        <Pfay_Test>
          <version>1.0.0</version>
        </Pfay_Test>
     </modules>

    <global>
      <blocks>
         <test>
            <class>Pfay_Test_Block</class>
         </test>
      </blocks>
    </global>
     
    <frontend>
      <routers>
        <layout>
          <updates>
            <test>
              <file>test.xml</file>
            </test>
          </updates>
        </layout>
      <routeurfrontend>
        <use>standard</use>
          <args>
            <module>Pfay_Test</module>
              <frontName>test</frontName>
          </args>
      </routeurfrontend>
      </routers>
    </frontend>

</config>